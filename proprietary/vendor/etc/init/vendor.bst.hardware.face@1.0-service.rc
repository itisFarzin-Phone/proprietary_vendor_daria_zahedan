service vendor.face_hal /vendor/bin/hw/vendor.bst.hardware.face@1.0-service
	# "class hal" causes a race condition on some devices due to file created
	# in /data. As a workaroud, postpone startup until later is boot once
	# /data is mounted
	class late_start
	user system
	group system input
    capabilities SYS_NICE
    task_profiles ProcessCapacityHigh MaxPerformance
	writepid /dev/cpuset/top-app/tasks

on post-fs-data
    mkdir /data/vendor/x_face_unlock 0766 system system

